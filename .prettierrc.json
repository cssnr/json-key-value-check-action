{
  "trailingComma": "es5",
  "semi": false,
  "singleQuote": true,
  "overrides": [
    {
      "files": ["**/*.html", "**/*.yaml", "**/*.yml"],
      "options": {
        "singleQuote": false
      }
    },
    {
      "files": ["**/*.js", "**/*.mjs", "**/*.ts", "**/*.css", "**/*.scss"],
      "options": {
        "tabWidth": 4
      }
    }
  ]
}
